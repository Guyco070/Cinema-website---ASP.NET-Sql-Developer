    <form action="RemoveSearchMovie" method="post">
        <input id="removeMovieButton" value="Remove movie" type="submit" />
    </form>
    <br />
    <form action="changeHall" method="post">
        <input id="hallsManButton" value="Movie halls management" type="submit" />
    </form>
    <br />

    <form action="SignInStart" method="post">
        <input id="SignOutStartButton" value="Sign Out" type="submit" style="margin-top:7px" />
    </form>

    <br /><br />
    <form action="MoviesSort" method="post">
        <input id="homePage" value="Beck home page" type="submit" style="margin:7px" />
