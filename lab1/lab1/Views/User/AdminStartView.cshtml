@model lab1.ViewModel.UserViewModel

@{
    ViewBag.Title = "AdminStartView";
}

<h4>Wellcome @Model.user.firstName @Model.user.lastName</h4>

<div>
    <h4>Users managemet</h4>
    <form action="addUser" method="post">
        <input id="addUserButton" value="Add user" type="submit" />
    </form>
    <form action="RemoveUser" method="post">
        <input id="removeUserButton" value="Remove user" type="submit" />
    </form>
    <br />
