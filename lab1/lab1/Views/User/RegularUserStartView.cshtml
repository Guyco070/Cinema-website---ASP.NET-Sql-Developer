        <input id="bookSeatButton" value="Book seat" type="submit" />
    </form>
    <br />
    <form action="changeSeat" method="post">
        <input id="changeSeatButton" value="Change a seat" type="submit" />
    </form>
    <br />

    <form action="makePayment" method="post">
