@model lab1.ViewModel.UserViewModel

@{
    ViewBag.Title = "RegularUserStartView";
}

<h2>Wellcome @Model.user.firstName @Model.user.lastName</h2>

<div>
    <h4>Users managemet</h4>
    <form action="addUser" method="post">
        <input id="addUserButton" value="Add user" type="submit" />
    </form>
    <br />
    <h4>Movie managemet</h4>
    <form action="searchMovie" method="post">
        <input id="searchMovieButton" value="Search movie" type="submit" />
