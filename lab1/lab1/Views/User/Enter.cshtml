@model lab1.ViewModel.UserViewModel
@using lab1.Models;

@{
    ViewBag.Title = "Enter";
}

<div>
    Enter your details:
    <form action="sendButtonAction" method="post">
        First Name: <input id="firstNameId" name="firstName" type="text" value="@Model.user.firstName" /> @Html.ValidationMessageFor(x => x.user.firstName) <br />
        Last Name:  <input id="lastNameId" name="lastName" type="text" value="@Model.user.lastName" /> @Html.ValidationMessageFor(x => x.user.lastName) <br />
        I.D:        <input id="idNumberId" name="idNumber" type="text" value="@Model.user.idNumber" /> @Html.ValidationMessageFor(x => x.user.idNumber)
        <br /><br />
        <input id="sendButton" value="Add User" type="submit" />
    </form>

    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>I.D</th>
            <th>Type</th>
        </tr>

        @foreach (User user in Model.users)
        {
        <tr>
            <td>@user.firstName   </td>
            <td>@user.lastName   </td>
            <td>@user.idNumber</td>
            <td>@user.uType</td>
        </tr>
        }
    </table>


</div>





